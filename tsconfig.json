{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "quill": ["types/quill.d.ts"],
      "react-native-webview": ["types/react-native-webview.d.ts"],
      "*": ["node_modules/*"]
    },
    "target": "es2015",
    "jsx": "react",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext"],
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
  "include": ["src/**/*"]
}
